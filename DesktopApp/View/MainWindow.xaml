        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tabdata="clr-namespace:DesktopApp.View" mc:Ignorable="d" Title="Manufacturing" Height="450" Width="800"
        FontSize="16">
    <Grid>
        <TabControl>
            <TabItem Header="Workshop">
                <tabdata:WorkshopsTable />
            </TabItem>

            <TabItem Header="Detail">
                <tabdata:DetailsTable />
            </TabItem>

            <TabItem Header="Production">
                <tabdata:ProductionsTable />
            </TabItem>
        </TabControl>
    </Grid>
</Window>